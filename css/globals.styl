*
    margin 0
    padding 0

html
    height 100%

article, aside, details, figcaption, figure, footer, header, hgroup, main, nav, section, summary
    display block

body
    font 14px fontReg, Tahoma, sans-serif
    height 100%
    color defColor
    line-height 1
    background bodyBg
    overflow-x hidden

.layout-body
    height 100%
    display flex
    flex-direction column
    justify-content space-between

.layout-wrapper
    min-width 320px

a 
    outline none
    text-decoration underline
    color redColor
    &:hover
        text-decoration none  
p 
    margin 0

img 
    border none
    max-width 100%
    height auto

input,
textarea,
button
    font-family fontReg, Tahoma, sans-serif
    font-size 12px
    vertical-align middle
    outline none
    color defColor
    box-sizing border-box

.content-center
    max-width 1200px
    margin 0 auto
    height 100%
    position relative
    box-sizing border-box
    // border-left 1px solid red
    // border-right 1px solid red
    @media screen and (max-width: 1200px)
        margin 0 25px
    @media screen and (max-width: 767px)
        margin 0 10px

input,
textarea
    +placeholder()
        color placeholderColor
        opacity 1
    &:focus
        +placeholder()
            opacity 0

.br-wrapper-f .br-readonly a.br-active,
.br-wrapper-f .br-readonly a.br-selected
    background-color #50e3c2

.br-wrapper-f .br-widget a:hover,
.br-wrapper-f .br-widget a.br-active,
.br-wrapper-f .br-widget a.br-selected
    background-position 0 33px

.br-wrapper-f
    .br-widget
        height 33px
        a
            background-image url(../img/star.png)
            width 34px
            height 33px
            display block
            float left
            &:not(:first-child)
                margin 0 0 0 18px
        .br-current-rating
            clear both
            width 330px
            text-align center
            font-weight 600
            display block
            padding .5em 0
            color #646464

